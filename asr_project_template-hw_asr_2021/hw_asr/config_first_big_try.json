{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "random_apply": 0.2,
    "wave": [
      {"type":"Gain",
      "args": {}},
      {"type":"Volume",
      "args": {}},
      {"type":"Stretch",
      "args": {}},
      {"type": "Pitch",
      "args": {"sr": 16000}},
       {"type":"WhiteNoise",
      "args": {"sr": 16000}}
    ],
    "spectrogram": [
      {"type":"FreqMasking",
      "args": {}}
    ]
  },
  "arch": {
    "type": "SpeechRecognitionModel",
    "args": {
        "n_cnn_layers": 3,
        "n_rnn_layers": 5,
        "rnn_dim": 512,

        "n_feats": 128,
        "stride": 2,
        "dropout": 0.1

    }
  },
  "data": {
    "train": {
      "batch_size": 20,

      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "data_dir": "/home/jupyter/mnt/s3/bucket-hse-rw/data/datasets/librispeech"

          }
        }
      ]
    },
    "val": {
      "batch_size": 20,

      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "data_dir": "/home/jupyter/mnt/s3/bucket-hse-rw/data/datasets/librispeech"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 201,
      "epochs": 100,
      "anneal_strategy": "linear",
      "max_lr": 5e-4

    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 200,
    "grad_norm_clip": 10
  }
}
